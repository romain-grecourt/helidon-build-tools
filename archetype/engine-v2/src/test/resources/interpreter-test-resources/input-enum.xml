<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <presets>
        <enum path="enum_input_context">
            <value>enum context value</value>
        </enum>
        <list path="list_input_context">
            <value>list value 1</value>
            <value>list value 2</value>
        </list>
        <boolean path="bool_input_context">true</boolean>
        <text path="user_text_input_context">text input from context</text>
    </presets>

    <step label="User enum input">

        <inputs>

            <enum name="enum1" label="Select the enum1">
                <option value="option1" label="Enum option 1">
                    <output>
                        <templates>
                            <directory>files1</directory>
                            <includes>
                                <include>included1.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="option2" label="Enum option 2">
                    <output>
                        <templates>
                            <directory>not_selected_files</directory>
                            <includes>
                                <include>not_selected_included.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
            </enum>

            <enum name="enum_input_context" label="Select the context enum">
                <option value="enum context value" label="enum context value label">
                    <output>
                        <templates>
                            <directory>files3</directory>
                            <includes>
                                <include>included3.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="enum context value 1" label="enum context value label 1">
                </option>
            </enum>


        </inputs>

    </step>
</archetype-script>
