<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <presets>
        <enum path="enum.provider">
            <value>enum value</value>
        </enum>
        <list path="list.provider">
            <value>list value 1</value>
            <value>list value 2</value>
        </list>
        <boolean path="bool_input_context">true</boolean>
        <boolean path="bool_input_context1">false</boolean>
        <text path="user_text_input_context">text input from context</text>
    </presets>

    <step label="User boolean input">

        <inputs>

            <boolean name="bool-input"
                     label="User boolean input label">
                <output>
                    <templates>
                        <directory>files</directory>
                        <includes>
                            <include>included.file</include>
                        </includes>
                    </templates>
                </output>
            </boolean>

            <boolean name="bool_input_context"
                     label="User boolean input context label">
                <output>
                    <templates>
                        <directory>files1</directory>
                        <includes>
                            <include>included1.file</include>
                        </includes>
                    </templates>
                </output>
            </boolean>

            <boolean name="bool_input_context1"
                     label="User boolean input context label 1">
                <output>
                    <templates>
                        <directory>files1_1</directory>
                        <includes>
                            <include>included1_1.file</include>
                        </includes>
                    </templates>
                </output>
            </boolean>

        </inputs>

    </step>
</archetype-script>
