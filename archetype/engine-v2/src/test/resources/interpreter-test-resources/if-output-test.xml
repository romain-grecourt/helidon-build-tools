<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <presets>
        <boolean path="foo">true</boolean>
        <boolean path="foo2">true</boolean>
        <boolean path="bool-input">true</boolean>
        <boolean path="bool-input2">true</boolean>
    </presets>

    <step label="User boolean input">

        <inputs>

            <boolean name="bool-input"
                     label="User boolean input label">
                <output if="${foo} == true">
                    <transformation id="t1">
                        <replace replacement="token" regex="foo"></replace>
                    </transformation>
                </output>
            </boolean>

            <boolean name="bool-input2"
                     label="User boolean input label 2">
                <output if="${foo2} == false">
                    <transformation id="t2">
                        <replace replacement="token2" regex="foo2"></replace>
                    </transformation>
                </output>
            </boolean>

        </inputs>

    </step>
</archetype-script>
