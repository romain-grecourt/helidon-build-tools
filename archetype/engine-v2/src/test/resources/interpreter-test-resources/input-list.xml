<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <presets>
        <enum path="enum_input_context">
            <value>enum context value</value>
        </enum>
        <list path="list_input_context">
            <value>List context value</value>
            <value>List context value 2</value>
        </list>
        <boolean path="bool_input_context">true</boolean>
        <text path="user_text_input_context">text input from context</text>
    </presets>

    <step label="User list input">

        <inputs>

            <list name="list1" label="Select the list1">
                <option value="option1" label="List option 1">
                    <output>
                        <templates>
                            <directory>files1</directory>
                            <includes>
                                <include>included1.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="option2" label="List option 2">
                    <output>
                        <templates>
                            <directory>files2</directory>
                            <includes>
                                <include>included2.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="option3" label="List option 3">
                    <output>
                        <templates>
                            <directory>not_selected_files</directory>
                            <includes>
                                <include>not_selected_included.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
            </list>

            <list name="list_input_context" label="Select the context list">
                <option value="List context value" label="list context value label">
                    <output>
                        <templates>
                            <directory>files_context</directory>
                            <includes>
                                <include>included_context.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="List context value 1" label="List context value label 1">
                    <output>
                        <templates>
                            <directory>not_selected_files</directory>
                            <includes>
                                <include>not_selected_included.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
                <option value="List context value 2" label="List context value label 2">
                    <output>
                        <templates>
                            <directory>files_context2</directory>
                            <includes>
                                <include>included_context2.file</include>
                            </includes>
                        </templates>
                    </output>
                </option>
            </list>


        </inputs>

    </step>
</archetype-script>
