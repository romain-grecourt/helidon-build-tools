<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 file:/archetype.xsd">

    <presets>
        <boolean path="test.option1">true</boolean>
        <list path="test.array1">
            <value>item 1</value>
        </list>
        <enum path="test.enum1">option1</enum>
        <text path="test.text1">text value 1</text>
    </presets>
    <step label="Step 1">
        <help><![CDATA[
Step 1 - Help text line 1
Step 1 - Help text line 2
]]></help>
        <inputs>
            <text name="input1" label="Input text 1"/>
        </inputs>
    </step>
    <inputs>
        <text name="input2" label="Input text 2"/>
        <boolean name="input3" label="Input boolean 3">
            <step label="Input 3 nested step 1">
                <help>Input 3 - Nested step 1 - help text</help>
                <inputs>
                    <text name="nested-input-1" label="Nested input text 1" default="default-value-1"/>
                    <boolean name="nested-input-2" label="Nested input boolean 2">
                        <inputs />
                    </boolean>
                    <enum name="nested-input-3" label="Nested input enum 3">
                        <help>Nested input 3 - help text</help>
                        <option label="Option 1" value="option1">
                            <help>Nested input 3 - Option 1 - help text</help>
                        </option>
                        <option label="Option 2" value="option2" />
                    </enum>
                    <list name="nested-input-4" label="Nested input list 4">
                        <help>Nested input 4 - help text</help>
                        <option label="Item 1" value="item1">
                            <help>Nested input 4 - Item 1 - help text</help>
                        </option>
                    </list>
                </inputs>
            </step>
        </boolean>
    </inputs>
    <inputs>
        <boolean name="input4" label="Input boolean 4">
            <help>Input 4 - help text</help>
            <inputs>
                <boolean name="nested-nested-input-5" label="Nested nested input boolean 5">
                    <output>
                        <template engine="tpl-engine-1" source="file1.tpl" target="file1.txt">
                            <model>
                                <value key="key1">value1</value>
                            </model>
                        </template>
                        <templates transformations="t1" engine="tpl-engine-2">
                            <directory>dir1</directory>
                            <includes>
                                <include>**/*.tpl</include>
                            </includes>
                            <model>
                                <value key="key2">value2</value>
                            </model>
                        </templates>
                    </output>
                </boolean>
            </inputs>
        </boolean>
    </inputs>
    <source src="./dir1/script1.xml"/>
    <exec src="./dir2/script2.xml"/>
    <output if="${foo} == 'bar'">
        <transformation id="t1">
            <replace replacement="token1" regex="regex1"/>
        </transformation>
        <templates transformations="t3" engine="tpl-engine-3">
            <directory>dir3</directory>
            <includes>
                <include>**/*.tpl3</include>
            </includes>
        </templates>
        <files transformations="t4">
            <directory>dir4</directory>
            <excludes>
                <exclude>**/*.tpl4</exclude>
            </excludes>
        </files>
        <model>
            <map key="key3">
                <value key="key3.1">value3.1</value>
                <list key="key3.2">
                    <value>value3.2a</value>
                    <value>value3.2b</value>
                </list>
            </map>
            <value key="key4" order="50">value4</value>
            <list key="key5">
                <value>value5a</value>
                <list>
                    <value>value5a1</value>
                    <value>value5a2</value>
                </list>
                <map>
                    <value key="key5.1">value5b1</value>
                    <value key="key5.2">value5b2</value>
                </map>
            </list>
        </model>
    </output>
</archetype-script>
